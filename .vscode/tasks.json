{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cmake",
            "label": "CMake: configure",
            "command": "configure",
            "problemMatcher": [],
            "detail": "CMake template configure task"
        },
        {
            "label": "oj: download",
            "type": "shell",
            "command": "cd ${fileDirname} && oj d `head -1 main.cpp | sed 's=^//=='` && echo '\n\n'",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "oj: test",
            "type": "shell",
            "command": "cd ${fileDirname} && oj t -M all && echo",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "dependsOn": [
                "C/C++: g++ build active file"
            ],
            "problemMatcher": []
        },
        {
            "label": "oj: submit",
            "type": "shell",
            "command": "cd ${fileDirname} && oj s main.cpp && echo",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "compile and run (a.out)",
            "type": "shell",
            "command": "cd ${fileDirname} && ./a.out",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "dependsOn": [
                "C/C++: g++ build active file"
            ],
            "problemMatcher": []
        },
    ],
    "version": "2.0.0"
}